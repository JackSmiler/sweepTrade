  <div id="popup"
    class="popup relative w-full max-w-lg origin-top rounded-lg bg-white transition-all duration-300 dark:bg-navy-700">
    <p id="popup-message"></p>
    <button
      class="btn mt-10 h-10 w-full bg-primary font-medium text-white hover:bg-primary-focus focus:bg-primary-focus active:bg-primary-focus/90 dark:bg-accent dark:hover:bg-accent-focus dark:focus:bg-accent-focus dark:active:bg-accent/90"
      style="background:#2cccc9;color:white" onclick="closePopup()">OK</button>
  </div>

  <script>
    document.getElementById('signup-form').addEventListener('submit', function (event) {
      event.preventDefault();
      const formData = new FormData(this);

      const password = formData.get('password');
      const confirmPassword = formData.get('confirmPassword');

      if (password.length < 8) {
        showPopup('Password must be at least 8 characters long.');
        return;
      }

      if (password !== confirmPassword) {
        showPopup('Passwords do not match.');
        return;
      }

      fetch('/ontoadminpansec/signup', {
        method: 'POST',
        body: formData
      })
        .then(response => response.json())
        .then(data => {
          if (data.redirectUrl) {
            showPopup(data.message);
            setTimeout(() => {
              window.location.href = data.redirectUrl;
            }, 3000);  // Redirect after 3 seconds
          } else {
            showPopup(data.message);
          }
        })
        .catch(error => {
          showPopup('Registration Failed!');
          console.error('Error:', error);
        });
    });

    function showPopup(message) {
      document.getElementById('popup-message').innerText = message;
      document.getElementById('popup').classList.add('visible');
    }

    function closePopup() {
      document.getElementById('popup').classList.remove('visible');
    }
  </script>


