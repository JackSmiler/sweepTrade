  <script>
    document.getElementById('signup-form').addEventListener('submit', function (event) {
      event.preventDefault();
      const formData = new FormData(this);

      const password = formData.get('password');
      const confirmPassword = formData.get('confirmPassword');

      if (password.length < 8) {
        showPopup('Password must be at least 8 characters long.');
        return;
      }

      if (password !== confirmPassword) {
        showPopup('Passwords do not match.');
        return;
      }

      fetch('/signup', {
        method: 'POST',
        body: formData
      })
        .then(response => response.json())
        .then(data => {
          if (data.redirectUrl) {
            showPopup(data.message);
            setTimeout(() => {
              window.location.href = data.redirectUrl;
            }, 3000);  // Redirect after 3 seconds
          } else {
            showPopup(data.message);
          }
        })
        .catch(error => {
          showPopup('Registration Failed!');
          console.error('Error:', error);
        });
    });

    function showPopup(message) {
      document.getElementById('popup-message').innerText = message;
      document.getElementById('popup').classList.add('visible');
    }

    function closePopup() {
      document.getElementById('popup').classList.remove('visible');
    }
  </script>


  <script>
    // Function to get query parameters from the URL
    function getQueryParam(param) {
      const urlParams = new URLSearchParams(window.location.search);
      return urlParams.get(param);
    }

    // Get the referral code from the URL
    const referralCode = getQueryParam('ref');

    // If there is a referral code in the URL, set it in the input field
    if (referralCode) {
