    <script>
        document.getElementById('proofOfId').addEventListener('change', function (event) {
            const file = event.target.files[0];

            if (file) {
                const reader = new FileReader();

                reader.onload = function (e) {
                    const previewDiv = document.getElementById('uploadPreview');
                    previewDiv.innerHTML = `<img src="${e.target.result}" alt="Proof of Identification">`;
                };

                reader.readAsDataURL(file);
            }
        });

        document.getElementById('uploadForm').addEventListener('submit', function (event) {
            event.preventDefault();  // Prevent the form from submitting

            // Simulate a successful upload
            document.getElementById('uploadMessage').innerText = "File uploaded successfully!";
        });

    </script>
